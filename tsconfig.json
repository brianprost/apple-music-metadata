{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "esNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}

